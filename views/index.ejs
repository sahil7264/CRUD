<!DOCTYPE html>
<html>
<head>
  <title>Task List</title>
</head>
<body>
  <h1>Task List</h1>

  <form method="post" action="/tasks">
    <input type="text" name="title" placeholder="Task title" required>
    <input type="text" name="description" placeholder="Task description">
    <button type="submit">Add Task</button>
  </form>

  <ul>
    <% tasks.forEach(task => { %>
      <li>
        <%= task.title %> - <%= task.description %> (Completed: <%= task.completed %>)
        
        <!-- Update Task Form -->
        <form method="post" action="/tasks/<%= task._id %>?_method=PUT">
          <input type="text" name="title" placeholder="New Title">
          <input type="text" name="description" placeholder="New Description">
          <button type="submit">Update</button>
        </form>
        
        <!-- Delete Task Form -->
        <form method="post" action="/tasks/<%= task._id %>?_method=DELETE">
          <button type="submit">Delete</button>
        </form>
      </li>
    <% }); %>
  </ul>
</body>
</html>
